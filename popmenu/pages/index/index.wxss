/**index.wxss**/

.nav-container {
  position: fixed;
  width: 100%;
  height: 100rpx;
  background-color: greenyellow;
}

.logo {
  position: absolute;
  left: 20rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: red;
}

.nav-toggler {
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
}

.nav-toggler-icon {
  display: inline-block;
  vertical-align: middle;
  width: 60rpx;
  height: 60rpx;
  background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(0, 0, 0, 0.5)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
  background-size: 100% 100%;
}

.nav-menu-button {
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  box-shadow: 1rpx 1rpx 10rpx lightblue;
  background-size: 100% 100%;
  background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(0, 0, 0, 0.5)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
  background-color: white;
}

.menu {
  width: 100%;
  height: 0rpx;
  background-color: green;
}
